{
  "extends": ["eslint:recommended", "google", "plugin:react/recommended"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"],
    "max-len": ["error", { "code": 160 }],
    "no-console": ["error", { "allow": ["log", "warn", "error"] }],
    "object-curly-spacing": ["error", "always"],
    "react/display-name": 0,
    "react/prop-types": 0,
    "require-jsdoc": 0,
    "camelcase": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": [
    "react",
    "react-native"
  ],
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "globals": {
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DEV__": true,
    "Platform": true,
    "fetch": true
  }
}
