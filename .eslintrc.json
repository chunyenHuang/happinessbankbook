{
  "extends": [
    "eslint:recommended",
    "google",
    "plugin:cypress/recommended",
    "plugin:chai-friendly/recommended"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "always"
    ],
    "max-len": [
      "error",
      {
        "code": 160
      }
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "log",
          "warn",
          "error"
        ]
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "require-jsdoc": 0,
    "no-useless-escape": "off"
  },
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "globals": {
    "global": true,
    "window": true,
    "navigator": true,
    "document": true,
    "fetch": true,
    "FormData": true
  }
}
